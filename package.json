{
  "name": "universal-student-api",
  "version": "2.0.0",
  "description": "Universal Educational API for student frontend projects with 20 domains",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --version && npm --version",
    "setup": "npm run setup-categories && npm run setup-data",
    "setup-categories": "node scripts/generateCategories.js",
    "setup-data": "node scripts/generateData.js",
    "setup-full": "node scripts/generateData.js --clear",
    "clear-data": "node scripts/generateData.js --clear",
    "backup-db": "cp database/universal-api.db database/backup-$(date +%Y%m%d-%H%M%S).db",
    "stats": "node -e \"const {getDatabaseStats} = require('./database/connection'); console.log(JSON.stringify(getDatabaseStats(), null, 2))\"",
    "vacuum": "node -e \"const {vacuumDatabase} = require('./database/connection'); vacuumDatabase()\"",
    "health": "curl -s http://localhost:3000/health | jq .",
    "test-auth": "node -e \"console.log('Testing auth endpoints...'); require('child_process').exec('code test-auth.http')\"",
    "test-api": "node -e \"console.log('Testing API endpoints...'); require('child_process').exec('code simple-test.http')\"",
    "deploy": "echo 'Ready for Railway deployment!'",
    "postinstall": "echo 'âœ… Universal Student API dependencies installed successfully!'"
  },
  "keywords": [
    "api",
    "educational",
    "students",
    "frontend",
    "backend",
    "express",
    "sqlite",
    "jwt",
    "authentication",
    "shopping-cart",
    "multi-domain"
  ],
  "author": "Educational Collaboration",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/universal-student-api.git"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "server.js",
    "database/",
    "middleware/",
    "routes/",
    "utils/",
    "scripts/",
    "*.http",
    "README.md"
  ]
}
